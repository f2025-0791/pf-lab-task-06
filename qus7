#solution code in if else if:
#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    int choice;
    double distance, time;
    const double air = 1100, water = 4900, steel = 16400;
    cout << "Speed of Sound Calculator\n";
    cout << "1. Air\n";
    cout << "2. Water\n";
    cout << "3. Steel\n";
    cout << "Enter your choice (1-3): ";
    cin >> choice;
    if (choice >= 1 && choice <= 3) {
        cout << "Enter distance (feet): ";
        cin >> distance;

        if (distance < 0) {
            cout << "Error: Distance cannot be negative.";
            return 0;
        }
        if (choice == 1)
            time = distance / air;
        else if (choice == 2)
            time = distance / water;
        else
            time = distance / steel;
        cout << fixed << setprecision(4);
        cout << "Time taken: " << time << " seconds\n";
    }
    else {
        cout << "Invalid input! Please choose 1, 2, or 3.";
    }
    return 0;
}

#code here

#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    int choice;
    double distance, time;
    const double air = 1100, water = 4900, steel = 16400;

    cout << "Speed of Sound Calculator\n";
    cout << "1. Air\n";
    cout << "2. Water\n";
    cout << "3. Steel\n";
    cout << "Enter your choice (1-3): ";
    cin >> choice;

    switch (choice) {
        case 1:
            cout << "Enter distance (feet): ";
            cin >> distance;
            if (distance < 0) {
                cout << "Error: Distance cannot be negative.";
                return 0;
            }
            time = distance / air;
            cout << fixed << setprecision(4);
            cout << "Time taken in Air: " << time << " seconds\n";
            break;

        case 2:
            cout << "Enter distance (feet): ";
            cin >> distance;
            if (distance < 0) {
                cout << "Error: Distance cannot be negative.";
                return 0;
            }
            time = distance / water;
            cout << fixed << setprecision(4);
            cout << "Time taken in Water: " << time << " seconds\n";
            break;

        case 3:
            cout << "Enter distance (feet): ";
            cin >> distance;
            if (distance < 0) {
                cout << "Error: Distance cannot be negative.";
                return 0;
            }
            time = distance / steel;
            cout << fixed << setprecision(4);
            cout << "Time taken in Steel: " << time << " seconds\n";
            break;

        default:
            cout << "Invalid input! Please choose 1, 2, or 3.";
            break;
    }

    return 0;
}
